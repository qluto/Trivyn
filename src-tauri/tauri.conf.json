{
  "productName": "Trivyn",
  "version": "0.1.0",
  "identifier": "com.trivyn.main",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "languages": ["English", "Japanese"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": true,
      "entitlements": "./Entitlements.plist"
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Trivyn",
        "url": "/",
        "width": 180,
        "height": 100,
        "minWidth": 180,
        "minHeight": 60,
        "maxWidth": 180,
        "maxHeight": 200,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true,
        "acceptFirstMouse": true
      },
      {
        "label": "popover",
        "title": "Trivyn - メニュー",
        "url": "/?popover=true",
        "width": 340,
        "height": 300,
        "minWidth": 340,
        "minHeight": 200,
        "maxWidth": 340,
        "maxHeight": 700,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5NkQyNDc1REYzOUZFNDEKUldSQi9qbmZkU1J0aVNBS25WRlVqWXQwM1N2SlJPQ3FTZmZ1c2NVM2Nvb2crL3FpdkdxbTFmcFIK",
      "endpoints": [
        "https://github.com/qluto/trivyn/releases/latest/download/latest.json"
      ]
    }
  }
}
