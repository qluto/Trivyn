{
  "productName": "Tria",
  "version": "0.1.0",
  "identifier": "com.tria.main",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "languages": ["en-US", "ja-JP"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Tria",
        "url": "/",
        "width": 220,
        "height": 120,
        "minWidth": 220,
        "minHeight": 80,
        "maxWidth": 220,
        "maxHeight": 300,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true,
        "acceptFirstMouse": true
      },
      {
        "label": "popover",
        "title": "Tria - メニュー",
        "url": "/?popover=true",
        "width": 420,
        "height": 400,
        "minWidth": 420,
        "minHeight": 400,
        "maxWidth": 420,
        "maxHeight": 900,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'"
    }
  }
}
