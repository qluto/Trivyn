{
  "productName": "Tria",
  "version": "0.1.0",
  "identifier": "com.tria.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "windows": {
      "allowDowngrades": true,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "languages": ["en-US", "ja-JP"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Tria",
        "url": "/",
        "width": 300,
        "height": 400,
        "minWidth": 280,
        "minHeight": 200,
        "maxWidth": 500,
        "maxHeight": 600,
        "resizable": true,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true
      },
      {
        "label": "popover",
        "title": "Tria - メニュー",
        "url": "/?popover=true",
        "width": 600,
        "height": 700,
        "minWidth": 600,
        "minHeight": 700,
        "maxWidth": 600,
        "maxHeight": 700,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    }
  }
}
